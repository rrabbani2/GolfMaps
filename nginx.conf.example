# Nginx Configuration for GolfMaps
# 
# Copy this file to: /etc/nginx/conf.d/golfmaps.conf
# Then test with: sudo nginx -t
# Reload with: sudo systemctl reload nginx
#
# Make sure to update:
# - server_name (your domain or IP)
# - proxy_pass port if different from 3000

server {
    listen 80;
    server_name _;  # Replace with your domain or EC2 public IP
    
    # Increase body size limit for API requests
    client_max_body_size 10M;
    
    # Logging
    access_log /var/log/nginx/golfmaps-access.log;
    error_log /var/log/nginx/golfmaps-error.log;
    
    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml+rss application/json application/javascript;
    
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Main location - proxy to Next.js
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        
        # Headers for proper proxying
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Disable buffering for streaming responses
        proxy_buffering off;
    }
    
    # Health check endpoint (optional - for monitoring)
    location /api/health {
        proxy_pass http://localhost:3000/api/health;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        access_log off;  # Don't log health checks
    }
    
    # Static assets caching (Next.js handles this, but we can add headers)
    location /_next/static {
        proxy_pass http://localhost:3000;
        proxy_cache_valid 200 60m;
        add_header Cache-Control "public, immutable";
    }
}

